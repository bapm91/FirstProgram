<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_height"
        android:clickable="true"
        android:id="@+id/card_view"
        card:cardElevation="@dimen/card_view_elevation"
        card:cardUseCompatPadding="true"
        card:cardBackgroundColor="@color/cardBackground"
        card:cardCornerRadius="@dimen/card_view_radius"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/line_view"
                android:background="@color/blak"
                android:layout_width="@dimen/view_width"
                android:layout_marginLeft="@dimen/view_margin_left"
                android:layout_height="@dimen/view_height">

            </View>

            <TextView
                android:layout_width="@dimen/title_width"
                android:layout_height="@dimen/title_height"
                android:layout_marginLeft="@dimen/some_title_margine"
                android:layout_marginTop="@dimen/some_margin"
                android:layout_marginStart="@dimen/some_title_margine"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/blak"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/title"/>

            <TextView
                android:layout_width="@dimen/card_street_width"
                android:layout_height="@dimen/card_street_height"
                android:id="@+id/card_street"
                android:textSize="@dimen/card_likes_text_size"
                android:layout_marginTop="@dimen/card_margin"
                android:layout_marginStart="@dimen/card_street_margin_start"
                android:layout_marginLeft="@dimen/some_margin"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:layout_below="@+id/title"
                android:textColor="@color/blak_54"/>

            <TextView
                android:layout_width="@dimen/card_date_width"
                android:layout_height="@dimen/some_margin"
                android:layout_marginLeft="@dimen/some_margin"
                android:layout_marginStart="@dimen/card_date_margin_start"
                android:layout_marginTop="@dimen/some_margin"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:textSize="@dimen/card_likes_text_size"
                android:id="@+id/card_date"
                android:textColor="@color/blak_54"
                android:layout_below="@+id/card_street"/>

            <TextView
                android:layout_width="@dimen/card_days_width"
                android:layout_height="@dimen/some_margin"
                android:layout_marginLeft="@dimen/some_margin"
                android:layout_marginStart="@dimen/card_days_margin_start"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:textSize="@dimen/card_likes_text_size"
                android:layout_marginTop="@dimen/some_margin"
                android:textColor="@color/blak_54"
                android:id="@+id/card_days"
                android:layout_below="@+id/card_street"/>

            <TextView
                android:layout_width="@dimen/card_likes_width"
                android:layout_height="@dimen/some_margin"
                android:layout_marginLeft="@dimen/some_margin"
                android:layout_marginStart="@dimen/card_likes_margin_start"
                android:gravity="center_vertical"
                android:textSize="@dimen/card_likes_text_size"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/some_margin"
                android:textColor="@color/blak_23"
                android:id="@+id/card_likes"
                android:layout_below="@+id/card_street"/>

            <ImageView
                android:layout_width="@dimen/card_icon"
                android:layout_height="@dimen/card_icon"
                android:layout_marginLeft="@dimen/some_margin"
                android:layout_marginTop="21dp"
                android:id="@+id/card_icon"
                android:src="@mipmap/ic_settings_black_24dp"
                android:layout_marginStart="@dimen/card_icon_margin_start"/>

            <ImageView
                android:layout_width="@dimen/card_image_like"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/some_margin"
                android:src="@mipmap/ic_thumb_up_black_24dp"
                android:layout_below="@+id/card_street"
                android:id="@+id/card_image_like"
                android:layout_marginTop="@dimen/card_image_like_margin_top"
                android:layout_marginStart="@dimen/some_margin"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>