<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:id="@+id/card_view"
        card:cardElevation="2dp"
        card:cardUseCompatPadding="true"
        card:cardBackgroundColor="@color/cardBackground"
        card:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/line_view"
                android:background="@color/blak"
                android:layout_width="1dp"
                android:layout_marginLeft="80dp"
                android:layout_height="126dp">

            </View>

            <TextView
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="97dp"
                android:textSize="16sp"
                android:text="gfsd"
                android:textColor="@color/blak"
                android:id="@+id/title"/>

            <TextView
                android:layout_width="170dp"
                android:layout_height="16dp"
                android:id="@+id/card_street"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="97dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/title"
                android:text="frs"
                android:textColor="@color/blak_87"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="97dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:id="@+id/card_date"
                android:textColor="@color/blak_87"
                android:text="hgfdbgfd"
                android:layout_below="@+id/card_street"/>

            <TextView
                android:layout_width="54dp"
                android:layout_height="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="266dp"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:textColor="@color/blak_87"
                android:text="hgfdbgfd"
                android:id="@+id/card_days"
                android:layout_below="@+id/card_street"/>

            <TextView
                android:layout_width="17dp"
                android:layout_height="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="46dp"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:textColor="@color/blak_87"
                android:text="91"
                android:id="@+id/card_likes"
                android:layout_below="@+id/card_street"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:id="@+id/card_icon"
                android:src="@mipmap/ic_launcher"
                android:layout_marginStart="19dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/ic_thumb_up_black_24dp"
                android:layout_below="@+id/card_street"
                android:id="@+id/card_image_like"
                android:layout_marginTop="13dp"
                android:layout_marginStart="19dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>